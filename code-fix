from itertools import permutations, combinations_with_replacement

nums = "1 3 4 20 40".split(" ")

numbersCombination = list(permutations(nums))

operators = ["+", "-", "*"]
operatorsCombination = list(combinations_with_replacement(operators, 4))

found = False
mainSumStr = ""

for numList in numbersCombination:
    for operatorList in operatorsCombination:
        newOperatorsCombination = list(permutations(operatorList))
        
        for newOpLst in newOperatorsCombination:
            sumStr = (numList[0] + newOpLst[0] + numList[1] + newOpLst[1] + numList[2] + newOpLst[2] + numList[3] + newOpLst[3] + numList[4])
            sum = eval(sumStr)
            
            if sum == 42:
                found = True
                mainSumStr = sumStr
                break
                
        if found == True:
            break
    
    if found == True:
        break
        
        
if found:
    print('YES')
    print(mainSumStr)
else:
    print('No')
